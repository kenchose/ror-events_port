<a href="/users/<%=current_user.id%>/edit">Edit My Profile</a>
<h1 style="text-align:center">Events Dashboard</h1>
<h1 class="text-center">Welcome, <%=current_user.first_name%>!</h1>
<h1>Here are some of the events at your state:</h1>
<table class="table-hover table-borderless col">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Details</th>
            <th>Location</th>
            <th>Host</th>
            <th># Attending</th>
            <th>Action/Status</th>
        </tr>
    </thead>
    <% @events.each do |event| %> 
        <% if event.state  == current_user.state  %>
            <tr>
                <td><a href= "/events/<%= event.id %>"><%= event.name %></a></td> 
                <td><%= event.date.strftime("%B %d, %Y") %></td>
                <td><%= event.detail %></td>
                <td><%= event.city %></td>
                <td><%= event.user.first_name %> <%= event.user.last_name %></td>
                <td><%= event.joins.count %> people are attending</td>
                <% if current_user.joining_event.ids.include? (event.id) %>
                    <td>Joining</td>
                    <td>
                        <form action="/joins/<%= event.id %>" method="post">
                            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                            <input type="hidden" name="_method" value="delete">
                            <button class="btn btn-danger" type="submit">Cancel</button>
                        </form>
                    </td>
                <% elsif %>
                    <% if current_user == event.user %>
                    <td><button class="btn btn-primary"><a style="color: white; text-decoration: none" href="events/<%= event.id %>/edit">Edit</a></button></td>
                        <td>
                            <form action="/events/<%= event.id %>" method="post">
                                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                                <input type="hidden" name="_method" value="delete">
                                <button class="btn btn-danger" type="submit">Delete Event</button>
                            </form>
                        </td>
                    <% end %>
                <% else %>
                    <td>
                        <form action="/joins/<%= event.id %>" method="post">
                            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                            <button class="btn btn-success" type="submit">Join</button>
                        </form>
                    </td>
                <% end %>
            </tr>
        <% end %>
    <% end %>
</table>

