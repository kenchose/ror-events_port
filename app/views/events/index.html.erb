<h1>Events Dashboard</h1>
<%=current_user.first_name%>
<a href="/users/<%=current_user.id%>/edit">Edit My Profile</a>


<h1>Here are some of the events at your state:</h1>
<table>
    <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Details</th>
        <th>Location</th>
        <th>Host</th>
        <th>Attending</th>
        <th>Action/Status</th>
    </tr>
    <% @events.each do |event| %>
        <tr>
            <td><%= event.name %></td> 
            <td><%= event.date %></td>
            <td><%= event.detail %></td>
            <td><%= event.city %></td>
            <td><%= event.user.first_name %> <%= event.user.last_name %></td>
            <td><%= event.joins.count %> people are attending</td>
            <% if current_user.joining_event.ids.include? (event.id) %>
            <td>Joining</td>
            <td>
                <form action="/joins/<%= event.id %>" method="post">
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <input type="hidden" name="_method" value="delete">
                    <input type="submit" value="Cancel">
                </form>
            <% elsif %>
                <% if current_user == event.user %>
                <td><a href="users/<%= event.id %>/edit">Edit</a></td>
                <!-- <td><button><a href="events/<%= event.id %>" data-method="delete">Delete Event</a></button> </td> -->
                <td>
                    <form action="/events/<%= event.id %>" method="post">
                        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit">Delete Event</button>
                    </form>
                </td>
                <% end %>
            <% else %>
            <td>
                <form action="/joins/<%= event.id %>" method="post">
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <button type="submit">Join</button>
                </form>
            </td>
            <% end %>
        </tr>
    <% end %>
</table>

<form action="/events" method="post">
