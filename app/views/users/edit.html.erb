<% if flash[:errors] %>
    <div class="ui error message">
        <h3>There are some errors with your submission</h3>
        <i class="close icon"></i>
        <% flash[:errors].each do |e| %>
            <ul class="list">
                <li><%= e %></li>
            </ul>
        <% end %>
    </div>
<% end %>

<div class="user-wrapper">
    <div class="ui container edit">
        <h2><i class="address book  icon"></i>Edit Profile</h2>
        <form action="/users/<%= @user.id %>" method="post" class="ui large form">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="hidden" name="_method" value="patch">
                <div class="five wide field">
                    <div class="required field">
                        <label for="first_name">First Name:</label>
                        <input type="text" name="user[first_name]" value="<%= @user.first_name %>">
                    </div>
                    <div class="required field">
                        <label for="last_name">Last Name:</label>
                        <input type="text" name="user[last_name]" value="<%= @user.last_name %>">
                    </div>
                    <div class="required field"> <!--CREATE CONFIRMATION EMAIL-->
